<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.9.0" client="site" method="upgrade">
    <name>Service Search</name>
    <author>Alex</author>
    <date>Mar 2021</date>
    <version>1.0.0</version>
    <folder>mod_servicesearch</folder>
    <description>Search service</description>
    <files>
        <filename>mod_servicesearch.xml</filename>
        <filename module="mod_servicesearch">mod_servicesearch.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>script.php</filename>
        <folder>assets</folder>
    </files>
    <!-- ! mind to handle errors and prevent wrong use ! -->
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
					name="page_id"
					type="menuitem"
					label="Result Page"
					description="MUST be selected the Service Search result page"
					default="0"
					filter="integer"
					>
                    <option value="0">Select the Service Search Result page</option> <!-- show onlye the compatible pages -->
                </field>
                <field name="introtext" type="text" default="default" label="Text to display before the form" description="" rows="10" cols="5" />

            </fieldset>
            <!-- add standard op -->
            <fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					filter="integer"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
        </fields>
    </config>
    <!-- updates to be set
    <updateservers><server type="extension" name="nhssearch" priority="1">https://www.aledesign.co.uk/joomla/servicesearch_update.xml</server></updateservers>
    -->
</extension>